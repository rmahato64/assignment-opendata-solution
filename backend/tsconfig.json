{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": ["es2015"],
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "../",
        "removeComments": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["node_modules", "*/.spec.ts", "public", "typings/**"]
}